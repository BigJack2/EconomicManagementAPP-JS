<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EconomicManagementAPP</title>
    <link rel="icon" href="~/img/logo/logo2.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EconomicManagementAPP.styles.css" asp-append-version="true" />
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merienda&family=Source+Sans+Pro&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-white">
            <div class="container">
                <a class="navbar-brand" href="#"><img width="200" src="~/img/logo/logo.png" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item ps-4">
                            <a class="nav-link text-link1 fs-5 fuente2" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>    
                        
                        <li class="nav-item dropdown ps-4">
                            <a class="nav-link dropdown-toggle text-link1 fs-5 fuente2" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Options
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item text-link1 fs-5 fuente2" asp-area="" asp-controller="Transactions" asp-action="Index">Transactions</a></li>
                                <li><a class="dropdown-item text-link1 fs-5 fuente2" asp-area="" asp-controller="Users" asp-action="Index">Users</a></li>
                                <li><a class="dropdown-item text-link1 fs-5 fuente2" asp-area="" asp-controller="Accounts" asp-action="Index">Accounts</a></li>
                                <li><a class="dropdown-item text-link1 fs-5 fuente2" asp-area="" asp-controller="AccountTypes" asp-action="Index">Account Types</a></li>
                                <li><a class="dropdown-item text-link1 fs-5 fuente2" asp-area="" asp-controller="OperationTypes" asp-action="Index">Operation Types</a></li>
                                <li><a class="dropdown-item text-link1 fs-5 fuente2" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a></li>
                            </ul>
                        </li>
                        <li class="nav-item ps-4">
                            <a class="btn btn-secondary rounded-pill fuente2" asp-area="" asp-controller="Users" asp-action="Login">Login<i class='bx bxs-door-open'></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="margin-top:120px;">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <div class="container bg-white position-absolute bottom-0 start-50 translate-middle-x">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <p class="col-md-4 mb-0 fuente2">&copy; 2022 - EconomicManagementAPP</p>

            <a class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto">
                <img width="150" src="~/img/logo/logo.png" />
            </a>

            <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
                <li class="ms-3"><a class="text-muted" href="#"><i class='bx h3 bxl-twitter'></i></a></li>
                <li class="ms-3"><a class="text-muted" href="#"><i class='bx h3 bxl-instagram-alt'></i></a></li>
                <li class="ms-3"><a class="text-muted" href="#"><i class='bx h3 bxl-facebook-circle'></i></a></li>
            </ul>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
